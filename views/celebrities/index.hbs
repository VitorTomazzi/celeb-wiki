<h2> List of All Celebrities</h2>

<div class='celeb-wrapper'>
    {{#each celebrities}}
    <div class='celeb-options'>
        <div class='celeb-image'>
            <img src="{{this.url}}" alt="celebrity image">
        </div>
        
        <div class='celeb-name'>
            {{this.name}}
        </div>
        <div class='phrase'>
            {{this.catchPhrase}}
        </div>

        <div class='celeb-actions'>
            <div>
                <a href="/celebrity/show/{{this._id}}">More Info</a>
            </div>

            <div>
                <a href="/celebrity/edit/{{this._id}}"> Edit </a>
            </div>
            
            <div>
                <form action="/celebrity/delete/{{this.id}}" method="POST">
                    <button class='delete-button' type="submit"> Delete </button>
                </form>
            </div>
        </div>
    </div>

    {{/each}}
</div>


